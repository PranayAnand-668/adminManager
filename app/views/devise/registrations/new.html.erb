<div class=" text-gray-700 flex flex-col justify-center items-center m-auto p-4 mt-[40px] 
  md:flex md:flex-col md:m-auto md:max-w-[300px] md:mt-[80px] 
  lg:flex lg:flex-col lg:m-auto lg:max-w-[500px] lg:mt-[120px] lg:border-2 lg:border-gray-500 lg:p-10 rounded-lg">
  
  <h2 class="font-bold text-3xl mb-5 lg:text-center md:text-center lg:mb-[10px]">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-gray-500 font-bold py-2">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", class: "lg:mb-[10px] lg:p-[8px] lg:border lg:border-gray-700
    mb-[5px] p-4 border border-gray-300 rounded-lg" %>
  </div>

  <div class="field text-gray-500 font-bold py-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "lg:mb-[10px] lg:p-[8px] lg:border lg:border-gray-700
    mb-[5px] p-4 border border-gray-300 rounded-lg" %>
  </div>

  <div class="field text-gray-500 font-bold py-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "lg:mb-[10px] lg:p-[8px] lg:border lg:border-gray-700
    mb-[5px] p-4 border border-gray-300 rounded-lg" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"p-6 font-bold text-lg mb-20 bg-blue-700 text-white rounded-lg w-[50%] lg:relative lg:p-2 lg:w-[100%] lg:mb-2 lg:bg-red-400" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
